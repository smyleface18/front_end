---
import { Icon } from 'astro-icon/components';
import Optionsmenu from '../components/Optionsmenu.astro'

interface Props {
	title: string;
}

const { title } = Astro.props;

const products = [
	{
		icon:"",
		name: "producto 1"
	},
	{
		icon:"",
		name: "producto 2"
	},
	{
		icon:"",
		name: "producto 3"
	}

]
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="bg-black w-screen " >
			<div class= "flex items-center justify-center">
				<img class="h-[61px]" src="/public/logo_aliexpress.webp" alt="logo aliexpress"> 
				<div class=" relative w-3/6 max-w-2xl">
					<input type="search" placeholder="Buscar..." class="h-9 rounded-full pl-5 outline-none pr-12 w-full ">
					<div class="bg-black right-1 top-[2px] absolute inline-block text-white rounded-2xl py-1 px-2">
						<Icon name="mdi:search"  class="size-6"/>
					</div>
				</div>

				<div class="text-white flex p-0 m-0 ml-8" >
					<Icon name="mdi:qrcode"  class="size-8" />
					<div class="text-[13px] ml-2">
						<p >Descarga la app</p>
						<p>de AliExpress</p>	
					</div>
				</div>

				<div class="text-white ml-8 flex flex-row items-center">
					<Icon name="mdi:person-outline" class="size-10" />
					<div class="">
						<p class="text-[13px]">!Bienvenido</p>
						<div class="flex text-[13px]">
							<b>Identificate / registrate</b>
							<Icon name="mdi:arrow-down-drop" class="size-6" />
						</div>
					</div>
				</div>

				<div class="text-white  ml-8 flex">
					<Icon name="mdi:cart-outline"  class="size-8"/>
					<div>
						<div class="bg-white h-4 flex items-center justify-center rounded-xl text-xs w-6">
							<b class="text-black">0</b>
						</div>
						<b class="  text-[13px]">Cesta</b>
					</div>
				</div>
			</div>
			<div class=" w-screen bg-black h-[70px] flex ">
				<ul class=" flex justify-around w-full items-center h-full">
					<Optionsmenu href={"#"} text={"Option 1"}></Optionsmenu>
					<Optionsmenu href={"#"} text={"Option 1"}></Optionsmenu>
					<Optionsmenu href={"#"} text={"Option 1"}></Optionsmenu>
					<Optionsmenu href={"#"} text={"Option 1"}></Optionsmenu>
					<Optionsmenu href={"#"} text={"Option 1"}></Optionsmenu>
				</ul>
			</div>
		</div>
		<div class="container banner">
			BANNER
		</div>
		<nav class="container main_menu" >
			<a href="/">Inicio</a>  <a href="/productos">Productos</a>
		</nav>
		<div class="container product_list">
			{
				products.map((product) => <div>
										<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" style="fill: rgba(0, 0, 0, 1);transform: ;msFilter:;"><path d="M12 5c-7.633 0-9.927 6.617-9.948 6.684L1.946 12l.105.316C2.073 12.383 4.367 19 12 19s9.927-6.617 9.948-6.684l.106-.316-.105-.316C21.927 11.617 19.633 5 12 5zm0 11c-2.206 0-4-1.794-4-4s1.794-4 4-4 4 1.794 4 4-1.794 4-4 4z"></path><path d="M12 10c-1.084 0-2 .916-2 2s.916 2 2 2 2-.916 2-2-.916-2-2-2z"></path></svg>
										{product.name}
										</div>
			)
			}

		</div>
		<div class="container categories">
			CATEGORIAS
		</div>
		<div class="container">
			<slot />
		</div>
		<div class="container footer">
			ESTE ES EL FOOTER
		</div>
	</body>
</html>
<style is:global>
	.main_menu{
		display: flex;
		background-color: rgb(170, 101, 235);
		align-items: center;
		height: 40px;
	}
	.main_menu a:hover{
		background-color: rgb(255, 255, 255);
		color: blueviolet;
	}
	.main_menu a {
		transition: background 400ms ease-in-out;
		height: 100%;
		padding: 0 10px;
		display: flex;
		align-items: center;
		text-decoration: none;
		color:#fff;
		font-weight:bold;
	}
	.header{
		background-color: rgb(250, 100, 0);

	}

	.banner{
		height: 240px;
		background-color: rgb(255, 255, 255) !important;
	}
	.product_list{
		height: 80px;
		display: flex;
	}
	.product_list div {
		height: 100%;
		max-width: 120px;
		border: 1px solid grey;
		border-radius: 5px;
		margin-right: 5px; 
		display: flex;
		flex-direction: column;
		justify-content: center;
		align-items: center;
	}
	.categories{
		height: 80px;
	}
	.footer{
		height: 80px;
		margin-top: 50px;
	}
	
	html, body {
		margin:0;
		font-family: system-ui, sans-serif;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
